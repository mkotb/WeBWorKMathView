{
    "manifest_version": 2,

    "name": "WeBWorK MathView",
    "version": "1.0",
    "description": "This extension provides live previews of math equations entered into WeBWorK text fields",

    "icons": {
        "16": "icon/icon_16.png",
        "32": "icon/icon_32.png",
        "48": "icon/icon_48.png",
        "128": "icon/icon_128.png"
    },

    "options_page": "options.html",

    "background": {
        "scripts": ["eventRegistration.js", "eventPage.js"],
        "persistent": false
    },

    "web_accessible_resources": [
        "katex/*",
        "katex/fonts/*",
        "asciimath-based/*"
    ],

    "permissions": [
        "storage",
        "activeTab",
        "declarativeContent"
    ],
    "optional_permissions": [
        "tabs",
        "*://*/*"
    ]
}