{
  "manifest_version": 2,

  "name": "WeBWorK Live Preview",
  "version": "1.0",
  "description": "This extension provides live previews of math equations entered into WeBWorK text fields using MathJax",

  "content_scripts": [{
    "css": ["katex/katex.css"],
    "js": ["asciimath-based/ASCIIMathTeXImg.js", "katex/katex.min.js", "content.js"],
    "matches": ["https://webwork.elearning.ubc.ca/*"]
  }],

  "web_accessible_resources": [
    "katex/*",
    "katex/fonts/*",
    "asciimath-based/*"
  ]
}
