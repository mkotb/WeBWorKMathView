{
    "manifest_version": 2,

    "name": "WeBWorK Math Input",
    "version": "1.0",
    "description": "This extension provides live previews of math equations entered into WeBWorK text fields",

    "options_page": "options.html",

    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },

    "web_accessible_resources": [
        "katex/*",
        "katex/fonts/*",
        "asciimath-based/*"
    ],

    "permissions": [
        "storage",
        "activeTab",
        "declarativeContent"
    ],
    "optional_permissions": [
        "tabs",
        "http://*/",
        "https://*/"
    ]
}